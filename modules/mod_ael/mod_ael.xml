	<authorEmail>adeptus@adeptsite.info</authorEmail>
	<authorUrl>http://adeptsite.info</authorUrl>
	<version>1.5.0</version>
	<description>New Year snow module</description>
	<files>
		<filename module="mod_ael">mod_ael.php</filename>
		<filename>mod_ael/images/snow1.png</filename>
		<filename>mod_ael/images/snow2.png</filename>
		<filename>mod_ael/images/snow3.png</filename>
	</files>
	<params>
		<param name="@spacer" type="spacer" default="------- Общие настройки -------" label="" description="" />
		<param name="kol" type="list" default="30" label="Количество снега" description="Количество снежинок, выпадающих в минуту">
			<option value="10">10</option>
			<option value="20">20</option>
			<option value="30">30</option>
			<option value="40">40</option>
			<option value="50">50</option>
			<option value="60">60</option>
			<option value="70">70</option>
			<option value="80">80</option>
			<option value="90">90</option>
			<option value="100">100</option>
		</param>
		<param name="minspeed" type="list" default="10" label="Минимальная скорость" description="">
			<option value="10">10</option>
			<option value="20">20</option>
			<option value="30">30</option>
			<option value="40">40</option>
			<option value="50">50</option>
		</param>
		<param name="maxspeed" type="list" default="50" label="Максимальная скорость" description="">
			<option value="50">50</option>
			<option value="60">60</option>
			<option value="70">70</option>
			<option value="80">80</option>
			<option value="90">90</option>
			<option value="100">100</option>
		</param>
		<param name="melt" type="list" default="true" label="Снежинки тают?" description="Снежинки исчезают при наведении курсора?">
			<option value="true">Да</option>
			<option value="false">Нет</option>
		</param>
		<param name="@spacer" type="spacer" default="----- (c) ADEPTUS EL 2009 -----" label="" description="" />
	</params>
</install>